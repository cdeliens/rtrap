!!!
%html
  %head
    %title Admin Console
    = stylesheet_link_tag "admin/application", :media => "all"
    = javascript_include_tag "admin/application"
    = csrf_meta_tags
  %body#admin
    .navbar
      .navbar-inner
        .container-fluid        
          %a{href: home_static_pages_path, class: :brand}
            %i.halflings-icon.white.qrcode
            %span Admin Console
          .nav-no-collapse.header-nav
            %ul.nav.pull-right.current_user
              %li
                %a{href: profile_path(current_user.profile), class: :btn}
                  %i.halflings-icon.white.user
                  = current_user.email

  .container-fluid
    .row-fluid
      #sidebar-left.span1
        .nav-collapse.sidebar-nav
          %ul.nav.nav-tabs.nav-stacked.main-menu
            %li
              %a{href: admin_dashboards_path}
                %i.fa-icon-bar-chart
                %span.hidden-tablet
                  Dashboard
            %li
              %a{href: admin_pages_path}
                %i.fa-icon-edit
                %span.hidden-tablet
                  Pages
            %li
              %a{href: admin_users_path}
                %i.fa-icon-group
                %span.hidden-tablet
                  Users
            %li
              %a{href: admin_roles_path}
                %i.fa-icon-user-md
                %span.hidden-tablet
                  Roles
      #content.span11
        .row-fluid.sortable
          = yield
