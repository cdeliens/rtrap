#admin_form
  = semantic_form_for [:admin, @page] do |f|
    = f.inputs do
      = f.input :title,  input_html: {class: 'span11'}, placeholder: "Enter title..."
      = f.input :body, as: :text,  input_html: {class: 'span11'}, placeholder: "Enter title..."
      = f.action :submit, :as => :button, button_html: {class: 'pull_left btn btn-success'}, placeholder: "Enter title..."
